{
  "$schema": "https://raw.githubusercontent.com/ScratchAddons/manifest-schema/dist/schema.json",
  "name": "Live forum posts",
  "description": "Live forum post refreshing",
  "credits": [
    {
      "name": "9gr",
      "link": "https://scratch.mit.edu/users/9gr/"
    }
  ],
  "userscripts": [
    {
      "matches": ["https://scratch.mit.edu/discuss/topic/*"],
      "url": "userscript.js"
    }
  ],
  "settings": [
    {
      "name": "Live signatures",
      "type": "boolean",
      "id": "signature",
      "default": true
    },
    {
      "name": "Time in-between page fetches (in seconds)",
      "type": "positive_integer",
      "min": 1,
      "id": "waitTime",
      "default": 2
    },
    {
      "name": "Soft posting in forums",
      "type": "boolean",
      "id": "softPosting",
      "default": true
    }
  ],
  "tags": ["forums", "community", "beta"]
}
