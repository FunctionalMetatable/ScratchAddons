{
  "$schema": "https://raw.githubusercontent.com/ScratchAddons/manifest-schema/dist/schema.json",
  "name": "Remove border on profile pictures",
  "description": "Removes the border on profile pictures in comments.",
  "credits": [
    {
      "name": "9gr"
    }
  ],
  "userstyles": [
    {
      "url": "style.css",
      "matches": ["https://scratch.mit.edu/studios/*", "https://scratch.mit.edu/projects/*"]
    }
  ],
  "customCssVariables": [
    {
      "name": "length",
      "value": {
        "type": "settingValue",
        "settingId": "remove-on-avatars"
      }
    }
  ],
  "settings": [
    {
      "name": "Remove borders on user avatars",
      "id": "remove-on-avatars",
      "type": "boolean"
    }
  ],
  "tags": ["community"],
  "versionAdded": "1.16.0",
  "enabledByDefault": false
}
