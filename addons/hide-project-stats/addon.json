{
  "$schema": "https://raw.githubusercontent.com/ScratchAddons/manifest-schema/dist/schema.json",
  "name": "Hide project stats",
  "description": "Hides project stats",
  "credits": [
    {
      "name": "9gr",
      "link": "https://scratch.mit.edu/users/9gr"
    }
  ],
  "userstyles": [
    {
      "url": "hide_remix_count.css",
      "matches": ["projects"],
      "settingMatch": {
        "id": "remixes",
        "value": true
      }
    },
    {
      "url": "hide_view_count.css",
      "matches": ["projects"],
      "settingMatch": {
        "id": "views",
        "value": true
      }
    },
    {
      "url": "hide_love_count.css",
      "matches": ["projects"],
      "settingMatch": {
        "id": "loves",
        "value": true
      }
    },
    {
      "url": "hide_favorite_count.css",
      "matches": ["projects"],
      "settingMatch": {
        "id": "favorites",
        "value": true
      }
    }
  ],
  "settings": [
    {
      "name": "Hide \"love\" count",
      "default": true,
      "id": "loves",
      "type": "boolean"
    },
    {
      "name": "Hide \"favorite\" count",
      "default": true,
      "id": "favorites",
      "type": "boolean"
    },
    {
      "name": "Hide \"remix\" count",
      "default": true,
      "id": "remixes",
      "type": "boolean"
    },
    {
      "name": "Hide \"view\" count",
      "default": true,
      "id": "views",
      "type": "boolean"
    }
  ],
  "dynamicDisable": true,
  "dynamicEnable": true,
  "updateUserstylesOnSettingsChange": true,
  "injectAsStyleElt": true,
  "tags": ["community", "projectPage"],
  "versionAdded": "1.18.0",
  "enabledByDefault": false
}
